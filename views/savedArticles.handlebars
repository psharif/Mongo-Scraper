<div class="container-fluid">
	<nav class="navbar navbar-dark bg-primary">
		<form class="form-inline">
		    <a href="/"><button class="btn btn-primary" type="button">Scraped Articles</button></a>
		    <a href="/articles"><button class="btn btn-primary" type="button">Saved Articles</button></a>
	  	</form>
	</nav>
	<div class="jumbotron" id="jumbo">
	  <h1 style="color:#4274D4">Saved Articles</h1> 
	  <br><br>
	  <h3 style="color:#4274D4"> Feel Free to Comment or Delete</h3> 
	  <br><br>
	</div>
	<br><br>
	<div id="article-area">
		{{#each savedArticle}}
			<div class="new-article">
				<div class='card'>
					<div class='card-body'>
						<div class="card-header" style="background-color: #4274D4; padding: 2em;">
							<h5>
								<a href='{{url}}' target="_blank" style="color: white;">{{headline}}</a>
								<button type="button" class="btn btn-danger delete-article" data-id="{{_id}}" style="float: right;color: white">Delete Article</button>
								<button type="button" class="btn btn-light make-comment" data-id="{{_id}}" style="float: right; background-color: #A898D4;color: white;margin-right: 2em" data-toggle="modal" data-target="#newCommentModal">New Comment</button>
							</h5>
	  					</div>
						<p><strong>Summary:&nbsp;</strong>{{summary}}</p>
						<br>
					</div>
				</div>
			</div>
			<h4 style="text-align:center">Comments</h4>
			{{#each comments}}
			<div class='card' style="width: 60%; margin: auto">
				<div class='card-body'>
				<h6 style="margin-left:10px;padding: 10px;"><strong><span style="padding-top:20px">{{title}}</span></strong><button type="button" class="btn btn-danger delete-comment" data-id="{{_id}}" style="float:right;color: white;">Delete</button><button type="button" class="btn btn-light edit-comment" data-id="{{_id}}" data-title="{{title}}" data-body="{{body}}" style="float: right; background-color: #A898D4;color: white;margin-right: 2em" data-toggle="modal" data-target="#currentCommentModal">Edit</button></h6>
				<hr>
				<p style="margin-left:20px">{{body}}</p>
				</div>
			</div>
			{{/each}}
		{{/each}}
		<br><br><br>
	</div>


	<div class="modal fade" id="newCommentModal" tabindex="-1" role="dialog" aria-labelledby="newCommentModalLabel" aria-hidden="true">
	  <div class="modal-dialog" role="document">
	    <div class="modal-content">
	      <div class="modal-header">
	        <h6 class="modal-title" id="newCommentModalLabel">New Comment</h6>
	        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
	          <span aria-hidden="true">&times;</span>
	        </button>
	      </div>
	      <div class="modal-body">
	        <form>
	          <div class="form-group">
	            <label for="comment-title-input" class="col-form-label">Title:</label>
	            <input type="text" class="form-control" id="new-comment-title-input">
	          </div>
	          <div class="form-group">
	            <label for="comment-message-input" class="col-form-label">Comment: </label>
	            <textarea class="form-control" id="new-comment-body-input"></textarea>
	          </div>
	        </form>
	      </div>
	      <div id="comment-article-id"></div>
	      <div class="modal-footer">
	        <button type="button" class="btn btn-primary" data-dismiss="modal" id="save-new-comment">Save Comment</button>
	      </div>
	    </div>
	  </div>
	</div>

	<div class="modal fade" id="currentCommentModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
	  <div class="modal-dialog" role="document">
	    <div class="modal-content">
	      <div class="modal-header">
	        <h6 class="modal-title" id="currentCommentModalLabel"></h6>
	        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
	          <span aria-hidden="true">&times;</span>
	        </button>
	      </div>
	      <div class="modal-body">
	        <form>
	          <div class="form-group">
	            <label for="comment-title-input" class="col-form-label">Title:</label>
	            <input type="text" class="form-control" id="current-comment-title-input">
	          </div>
	          <div class="form-group">
	            <label for="comment-message-input" class="col-form-label">Comment: </label>
	            <textarea class="form-control" id="current-comment-body-input"></textarea>
	          </div>
	        </form>
	      </div>
	      <div id="comment-article-id"></div>
	      <div class="modal-footer">
	        <button type="button" class="btn btn-primary" data-dismiss="modal" id="edit-comment">Edit Comment</button>
	      </div>
	    </div>
	  </div>
	</div>
</div>
